{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@resource/types": ["../types/index.ts"],
            "@resource/types/*": ["../types/*"],
            "@resource/shared": ["../shared/index.ts"],
            "@resource/shared/*": ["../shared/*"],
            "@resource/config": ["../config.json"],
            "@/*": ["./src/*"]
        },
        "outDir": "./dist",
        "module": "esnext",
        "target": "es6",
        "allowJs": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "types": ["@types/node"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "jsx": "react-jsx"
    },
    "include": ["./**/*"],
    "exclude": ["**/node_modules", "**/__tests__/*"]
}
